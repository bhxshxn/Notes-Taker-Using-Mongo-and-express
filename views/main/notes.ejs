<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes-Taker</title>
    <link rel="stylesheet" href="/css/notes.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
</head>

<body>
    <%- include("./../partials/navbar.ejs") %>
        <%var count=0%>
            <%if(user){%>
                <div class="box">
                    <div class="column1">
                        <%if(!note){%>
                            <div class="alert alert-light" role="alert">
                                No notes
                            </div>
                            <%}else{%>
                                <%note.forEach(notes=>{%>
                                    <%if(notes.user===user){%>
                                        <%count++%>
                                            <%}%>
                                                <%});%>
                                                    <%if(count>0){%>
                                                        <%for(var i=0;i<note.length;i++){%>
                                                            <%if(note[i].user===user){%>
                                                                <div class="each">
                                                                    <a href="">
                                                                        <div class="alert alert-light" role="alert">
                                                                            <%=note[i].title%><a
                                                                                    href="/user/delete/<%=note[i].id%>"><i
                                                                                        style="float: right;"
                                                                                        class="fas fa-trash"></i></a>
                                                                        </div>
                                                                    </a>
                                                                </div>
                                                                <%}%>
                                                                    <%}%>
                                                                        <%}else{%>
                                                                            <div class="alert alert-light" role="alert">
                                                                                you have No notes
                                                                            </div>
                                                                            <%}%>
                                                                                <%}%>
                    </div>
                    <div class="column2">
                        <form method="Post" action="/user/save">
                            <div class="form-group">
                                <input type="text" class="form-control mt-10" id="title" placeholder="Add title"
                                    name="title" required>
                            </div>
                            <div class="form-group">
                                <textarea style="resize: none;" class="form-control" id="note" rows="10"
                                    placeholder="Note" name="note" required></textarea>
                            </div>
                            <div class="icons">
                                <button type="submit" class="btn "><i class="fas fa-save"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
                <%}else{%>
                    <%=console.log(notes)%>
                        <div class="box">
                            <div class="column1">
                                <%if(!notes){%>
                                    <div class="alert alert-light" role="alert">
                                        No notes
                                    </div>
                                    <%}else{%>
                                        <%for(var i=0;i<notes.length;i++){%>
                                            <div class="each">
                                                <a href="">
                                                    <div class="alert alert-light" role="alert">
                                                        <%=notes[i].title%><a href="/user/delete/"><i
                                                                    style="float: right;" class="fas fa-trash"></i></a>
                                                    </div>
                                                </a>
                                            </div>

                                            <%}%>

                                                <%}%>
                            </div>
                            <div class="column2">
                                <form method="Post" action="/user/save">
                                    <div class="form-group">
                                        <input type="text" class="form-control mt-10" id="title" placeholder="Add title"
                                            name="title" required>
                                    </div>
                                    <div class="form-group">
                                        <textarea style="resize: none;" class="form-control" id="note" rows="10"
                                            placeholder="Note" name="note" required></textarea>
                                    </div>
                                    <div class="icons">
                                        <button type="submit" class="btn "><i class="fas fa-save"></i></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <%}%>
                            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
                            <script
                                src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>