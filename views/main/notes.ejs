<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes-Taker</title>
    <link rel="stylesheet" href="css/notes.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
</head>

<body>
    <%- include("./../partials/navbar.ejs") %>
        <div class="box">
            <div class="column1">
                <%for(var i=0;i<5;i++){%>
                    <div class="each">
                        <a href="">
                            <div class="alert alert-light" role="alert">
                                Title<a href=""><i style="float: right;" class="fas fa-trash"></i></a>
                            </div>
                        </a>
                    </div>
                    <%}%>
            </div>
            <div class="column2">
                <form method="Post" action="/save">
                    <div class="form-group">
                        <input type="email" class="form-control mt-10" id="exampleFormControlInput1"
                            placeholder="Add title" name="title">
                    </div>
                    <div class="form-group">
                        <textarea style="resize: none;" class="form-control" id="exampleFormControlTextarea1" rows="10"
                            placeholder="Note" name="note"></textarea>
                    </div>
                    <div class="icons">
                        <button type="submit" class="btn "><i class="fas fa-save"></i></button>
                    </div>
                </form>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>